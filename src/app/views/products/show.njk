{% extends "layout.njk" %}
{% block content %}
<section class="product-single container">
    <div class="gallery">
        <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO">
    </div>

    <div class="info">
        <h1>{{product.name}}</h1>
        <div class="published">
            Publicado em {{product.published.day}} {{product.published.hour}}
        </div>

        <div class="description">
            {{product.description}}
        </div>

        <div class="price-buy">
            <div class="price">
                {% if product.price !== product.oldPrice %}
                    <span class="old">De: {{product.oldPrice}}</span>
                {% endif %}
                
                Por: {{product.price}}
            </div>
            
            <div class="buy">
                {% if product.status == 0 %}
                    <p class="unavailable">Indispon√≠vel</p>
                {% elseif product.quantity == 0%}
                    <p class="unavailable">Fora de Estoque</p>
                {% else %}
                    <button class="button">Comprar</button>
                {% endif %}
                
            </div>
        </div>
    </div>
</section>
{% endblock content %}